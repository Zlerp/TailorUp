<%= form_for(@tailor) do |t| %>
  <%= t.hidden_field :company_id, value: 1 %>
  <%= t.text_field :first_name, :placeholder => "First name" %>
  <%= t.text_field :last_name, :placeholder => "Last name" %>
  <%= t.email_field :email, :placeholder => "Email" %>
  <%= t.password_field :password, :placeholder => "Password" %>
  <%= t.submit "Create an account", class: "btn-submit" %>
<% end %>
